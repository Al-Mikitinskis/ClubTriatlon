<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">${hibernate.dialect}</property>
        <property name="hibernate.show_sql">${hibernate.show_sql}</property>
        <property name="hibernate.format_sql">${hibernate.format_sql}</property>
        <property name="hibernate.use_sql_comments">${hibernate.use_sql_comments}</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="hibernate.connection.pool_size">1</property>
	<!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <mapping class="es.udc.tfg_es.clubtriatlon.model.UserProfile" />
        <mapping class="es.udc.tfg_es.clubtriatlon.model.Role" />
        <mapping class="es.udc.tfg_es.clubtriatlon.model.WeeklyPlanning" />
        <mapping class="es.udc.tfg_es.clubtriatlon.model.Planning" />
        
    </session-factory>
</hibernate-configuration>
