<html xmlns="http://www.w3.org/1999/xhtml"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	  xmlns:p="tapestry:parameter">

<head>
	<title>${pageTitle}</title>
	<link rel="StyleSheet" href="${context:/css/styles.css}"
		  type="text/css" media="all"/>
</head>

<body>

<!-- Window. -->

<div id="window">

<!-- Page title. -->

<div id="pageTitle">
	<div align="center">
       ${message:header}
	</div>
</div>

<!-- Menu. -->

<div id="menu">
	<span id="menuWelcome">
  		<t:if test="userSession">
 			${message:menu-hello} ${userSession.name}
            <p:else>
            	${message:menu-welcome}
            </p:else>
		</t:if>
    </span>
    <t:if test="menuExplanation">
	 	<span id="menuExplanation">
 		  -  ${menuExplanation}
 		</span>
        <p:else></p:else>
 	</t:if>
</div>

<table  width="100%" >
<tr >

<!-- Sidebar. -->

<td valign="top" id="sidebar" width="15%" >

  	<ul>
	<t:if test="userSession">
		<t:security.hasrole role="Administrador">
			<li><a href="#" id="planning" t:type="PageLink" t:page="admin/Planning">
					${message:sidebar-adminPlaning}</a></li>
			<li><a href="#" id="preferences" t:type="PageLink" t:page="admin/AdminPreferences">
			${message:sidebar-preferences}</a></li>
		</t:security.hasrole>
		<t:security.hasrole role="Usuario">
			<li><a href="#" id="preferences" t:type="PageLink" t:page="user/UserPreferences">
			${message:sidebar-preferences}</a></li>
		</t:security.hasrole>
			<li>   	
				<a href="#" id="logout" t:type="ActionLink" t:id="logout">
					${message:sidebar-logout}</a>
			</li>
	<p:else>
			<li>   	
				<a href="#" id="autenticarse" t:type="PageLink" t:page="Login">
					${message:sidebar-authenticate}</a>
			</li>
	</p:else>
	</t:if>
  	</ul>
</td>

<!-- Content. -->

<td id="content" width="85%" >

<div >
	<div align="center">
  		<t:body/>
  	</div>
</div>
</td>
</tr>
</table>

<!-- Body footer. -->

<div id="footer">
    <div align="center">
       ${message:footer}
    </div>
</div>

<!-- End of "window" id. -->

</div>

<!-- End of HTML body. -->

</body>

</html>